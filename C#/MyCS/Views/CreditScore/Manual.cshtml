@model MyCS.InputModels.ManualInputModel
@{
    this.ViewData["Title"] = "Manual form";
}
<style>
    body {
        background: url("../img/finance1.jpg") no-repeat center center fixed;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
    }

    div {
        height: 87.25%;
    }

    form {
        background: rgba(255,255,255,0.85);
        backdrop-filter: blur(5px);
        border-bottom-left-radius: 25px;
        border-bottom-right-radius: 25px;
        padding: 50px;
        margin: auto;
    }

    .btn, h1, #sub_but_div {
        border-radius: 25px;
        text-align: center;
    }

    .container {
        display: flex;
        flex-direction: row-reverse;
        justify-content: space-evenly;
    }

    .datepicker {
        height: 250px;
    }

    p {
        display: block;
    }
</style>
<body>
    <div class="container">
        <form asp-controller="CreditScore" asp-action="Manual" method="post" enctype="multipart/form-data">
            <h1 class="display-4">
                Manual Check
            </h1>
            <br />
            <div class="row">
                <div class="col"><hr></div>
                <div class="col-auto">Personal information</div>
                <div class="col"><hr></div>
            </div>
            <div class="form-group">
                <label asp-for="Age_of_Applicant"></label>
                <input asp-for="Age_of_Applicant" class="form-control" placeholder="Enter age" />
                <span asp-validation-for="Age_of_Applicant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Current_Delinquency_status"></label>
                <input asp-for="Current_Delinquency_status" class="form-control" placeholder="Enter current delinquency status" />
                <span asp-validation-for="Current_Delinquency_status" class="text-danger"></span>
            </div>

            <label asp-for="Application_Date"></label>
            <div id="datepicker" class="input-group date separated" data-date-format="mm-dd-yyyy">
                <input class="form-control" type="text" asp-for="Application_Date" readonly />
                <div class="input-group-text">
                    <span class="input-group-addon"><ion-icon name="calendar-outline"></ion-icon> Date</span>
                </div>
            </div>
            <span asp-validation-for="Application_Date" class="text-danger"></span>

            <div class="form-group">
                <label asp-for="Gross_Annual_Income"></label>
                <input asp-for="Gross_Annual_Income" class="form-control" placeholder="Enter gross annual income" />
                <span asp-validation-for="Gross_Annual_Income" class="text-danger"></span>
            </div>

            <label>Do you have a home telephone number?</label><br />
            <input asp-for="Home_Telephone_Number" type="radio" value="Y">
            <label asp-for="Home_Telephone_Number">Yes</label>
            <input asp-for="Home_Telephone_Number" type="radio" value="N">
            <label asp-for="Home_Telephone_Number">No</label><br>

            <label>Marital Status</label><br />
            <input asp-for="Marital_Status" type="radio" value="M">
            <label asp-for="Marital_Status">Married</label>
            <input asp-for="Marital_Status" type="radio" value="D">
            <label asp-for="Marital_Status">Divorced</label>
            <input asp-for="Marital_Status" type="radio" value="S">
            <label asp-for="Marital_Status">Single</label>
            <input asp-for="Marital_Status" type="radio" value="W">
            <label asp-for="Marital_Status">Widow</label>
            <input asp-for="Marital_Status" type="radio" value="Z">
            <label asp-for="Marital_Status">Other</label><br />
            <span asp-validation-for="Marital_Status" class="text-danger"></span>

            <label>Occupation Code</label><br />
            <input asp-for="Occupation_Code" type="radio" value="M">
            <label asp-for="Occupation_Code">Employee</label>
            <input asp-for="Occupation_Code" type="radio" value="B">
            <label asp-for="Occupation_Code">Self-employed</label>
            <input asp-for="Occupation_Code" type="radio" value="P">
            <label asp-for="Occupation_Code">Pensioner</label>
            <input asp-for="Occupation_Code" type="radio" value="O">
            <label asp-for="Occupation_Code">Other</label><br />
            <span asp-validation-for="Occupation_Code" class="text-danger"></span>

            <label>Residential Status</label><br />
            <input asp-for="Residential_Status" type="radio" value="H">
            <label asp-for="Residential_Status">Homeowner</label>
            <input asp-for="Residential_Status" type="radio" value="L">
            <label asp-for="Residential_Status">Living with parents</label>
            <input asp-for="Residential_Status" type="radio" value="T">
            <label asp-for="Residential_Status">Tenant</label>
            <input asp-for="Residential_Status" type="radio" value="O">
            <label asp-for="Residential_Status">Other</label><br />
            <span asp-validation-for="Residential_Status" class="text-danger"></span>

            <div class="form-group">
                <label asp-for="Time_at_Address"></label>
                <input asp-for="Time_at_Address" class="form-control" placeholder="Enter time at address" />
                <span asp-validation-for="Time_at_Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Time_in_Employment"></label>
                <input asp-for="Time_in_Employment" class="form-control" placeholder="Enter time in employment" />
                <span asp-validation-for="Time_in_Employment" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Time_with_Bank"></label>
                <input asp-for="Time_with_Bank" class="form-control" placeholder="Enter time with bank" />
                <span asp-validation-for="Time_with_Bank" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col"><hr></div>
                <div class="col-auto">Financial information</div>
                <div class="col"><hr></div>
            </div>

            <div class="row">
                <div class="col"><hr></div>
                <div class="col-auto">Loan information</div>
                <div class="col"><hr></div>
            </div>
            <br />
            <div id="sub_but_div">
                <input class="btn btn-primary separated" type="submit" value="Submit">
            </div>
        </form>
    </div>

</body>

@section Scripts{
    <script>
        $(function () {
            $("#datepicker").datepicker({
                autoclose: true,
                todayHighlight: true
            }).datepicker('update', new Date());
        });
    </script>
}
