@using MyCS.InputModels
@model CsvFile
@{
	ViewData["Title"] = "Seed data";
}

<!--div class="container">
	<a asp-area="" asp-controller="Seed" asp-action="SeedRecords">Seed</a>
</div>-->
<body>
	<style>
		body {
			background: url("../img/finance2.jpg");
		}

		#input_form {
			background: rgba(255,255,255,0.85);
			backdrop-filter: blur(5px);
			border-bottom-left-radius: 25px;
			border-bottom-right-radius: 25px;
			width: 600px;
			padding: 30px;
			margin: auto;
		}

		#drop_zone {
			background: white;
			border-radius: 25px;
			border: 5px solid #1b6ec2;
			width: 400px;
			height: 220px;
			text-align: center;
			margin: auto;
		}

		#input_zone {
			border-radius: 20px;
			border: 1px solid #b1b1b1;
			width: 390px;
			height: 154px;
			text-align: center;
			border-top-left-radius: 0px;
			border-top-right-radius: 0px;
			cursor: pointer;
			padding-left: 90px;
			padding-top: 50px;
		}

		.btn, h1, #sub_but_div {
			border-radius: 25px;
			text-align: center;
		}
	</style>

	<form id="input_form" asp-controller="Seed" asp-action="SeedRecords" method="post" enctype="multipart/form-data">
		<h1 class="display-4">
			Bulk Check
		</h1>
		<br />
		<div id="drop_zone" class="form-group">

			<p></p>
			<p>
				Drag one or more files into this drop zone:
			</p>

			<input id="input_zone" asp-for="@Model.File" class="form-control" />

		</div>
		<br />
		<div id="sub_but_div">
			<input id="submit_btn" type="submit" class="btn btn-primary" />
		</div>

	</form>
</body>
